{
	"name": "@comitto/core",
	"version": "0.0.1",
	"description": "Core-library for CLI Comitto",
	"main": "dist/index.cjs.js",
	"module": "dist/index.esm.js",
	"types": "dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		".": {
			"import": "./dist/index.esm.js",
